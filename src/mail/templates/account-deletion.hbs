<!DOCTYPE html>
<html>
<head>
  <title>{{t "mail.templates.accountDeletion.title"}}</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      line-height: 1.6;
      color: #333;
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
    }
    .warning-box {
      background-color: #fff3cd;
      border: 2px solid #ffc107;
      border-radius: 8px;
      padding: 20px;
      margin: 20px 0;
    }
    .warning-box strong {
      display: block;
      margin-bottom: 10px;
      color: #856404;
      font-size: 16px;
    }
    .warning-box p {
      margin: 0;
      color: #856404;
    }
    .button {
      display: inline-block;
      padding: 12px 24px;
      background-color: #dc3545;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      font-weight: bold;
      margin: 20px 0;
    }
    .footer {
      color: #666;
      font-size: 14px;
      margin-top: 30px;
    }
  </style>
</head>
<body>
  <h1>{{t "mail.templates.accountDeletion.heading"}}</h1>
  {{#if username}}
    <p>{{t "mail.templates.accountDeletion.greeting"}} <strong>{{username}}</strong>,</p>
  {{else}}
    <p>{{t "mail.templates.accountDeletion.greeting"}},</p>
  {{/if}}

  <div class="warning-box">
    <strong>{{t "mail.templates.accountDeletion.warningTitle"}}</strong>
    <p>{{t "mail.templates.accountDeletion.warningBody"}}</p>
  </div>

  <p>{{t "mail.templates.accountDeletion.body"}}</p>

  <a href="{{confirmationUrl}}" class="button">
    {{t "mail.templates.accountDeletion.buttonText"}}
  </a>

  <p class="footer">{{t "mail.templates.accountDeletion.expireText"}}</p>
  <p class="footer">{{t "mail.templates.accountDeletion.ignoreText"}}</p>
</body>
</html>
